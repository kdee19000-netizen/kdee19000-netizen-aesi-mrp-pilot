# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aesi_mrp
AUDIT_DB_URL=postgresql://audit_readonly:password@localhost:5432/aesi_audit

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET=your-secret-key-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Quantum Crypto Keys (generate with: openssl genrsa -out private.pem 4096)
RSA_PRIVATE_KEY_PATH=./keys/private.pem
RSA_PUBLIC_KEY_PATH=./keys/public.pem

# Email
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@aesi-mrp.com

# SMS
TWILIO_ACCOUNT_SID=your-sid
TWILIO_AUTH_TOKEN=your-token
TWILIO_PHONE=+1234567890

# Feature Flags
ENABLE_QUANTUM_CRYPTO=true
ENABLE_PARENT_PORTAL=true
ENABLE_MRP_MODULE=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
